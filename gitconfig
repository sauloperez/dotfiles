[user]
  name = Pau Perez
  email = saulopefa@gmail.com
[alias]
  br  = branch
  ci  = commit
  co  = checkout
  df  = diff
  dfc = diff --cached
  g   = grep --break --heading --line-number
  lg  = log --oneline
  loq = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
  pb  = publish-branch
  rc  = rank-contributors
  sm  = show-merges
  st  = status
  recent = !git for-each-ref --sort=-committerdate --format='%(refname:short)' refs/heads/ | grep -v develop | head -n 10
  nav = !git recent | git checkout $(fzf)
  fshow = ! sh -c 'git show --pretty="format:" --name-only $1 | grep -v "^$" | uniq | sed -e "s#^#`git rev-parse --show-toplevel`/#"' -
  edit  = ! sh -c '$EDITOR `git fshow $1`' -
  fixup = "!f() { git commit --fixup=$1; git rebase -i --autosquash $1~1; }; f"
  wip = !git add -A && git commit -m 'WIP'
  unwip = !git reset HEAD^
  current = rev-parse --abbrev-ref HEAD
  repo=!git remote -v | grep '@.*fetch' | gsed 's/.*:\\(.*\\).git.*/\\1/g'
  pr=!open https://github.com/$(git repo)/compare/$(git current)?expand=1
  cleanup = "!for branch in $(git branch -vv  | grep ': gone]' | awk '{print $1}'); do git branch -D $branch; done"
  ra = "!f() { \
        git remote add $1 git@github.com:$1/$(basename $(git rev-parse --show-toplevel)).git; \
      }; f"

[branch]
  autosetuprebase = always

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old  = red bold
  new  = green bold

[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan

[diff "exif"]
  textconv = exiftool

[difftool]
  prompt = false

[merge]
  log = true

[fetch]
  prune = true

[push]
  default = current

[rerere]
  enabled = 1

[url "git@github.com:"]
  insteadOf     = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
  insteadOf = "github:"

[url "git@gist.github.com:"]
  insteadOf     = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
  insteadOf = "gist:"

[url "git@heroku.com:"]
  insteadOf = "heroku:"

[help]
  autocorrect = 1

[rebase]
  autosquash = true
[grep]
  extendRegexp = true

[includeIf "gitdir/i:~/tacto/"]
  path = ~/.gitconfig-tacto.inc

[includeIf "gitdir/i:~/infra/"]
  path = ~/.gitconfig-tacto.inc
[init]
	defaultBranch = main

# Load things
[[ -f "$HOME/.aliases" ]] && source "$HOME/.aliases"

[[ -f "$HOME/.functions" ]] && source "$HOME/.functions"

# Adjust $PATH
[[ -d "$HOME/.scripts" ]] && export PATH=$HOME/.scripts:$PATH

# Adds gnubin to PATH to use coreutils commands without the 'g' prefix. This
# allows linux scripts to work.
if [[ "$(uname)" == "Darwin" ]]; then
  export PATH=/usr/local/opt/coreutils/libexec/gnubin:$PATH

  # Setup for Python3. Following details of `brew info python` output
  export PATH=/usr/local/opt/python/libexec/bin:$PATH
fi

export PATH=~/.local/bin:/usr/local/bin:/usr/local/sbin:$PATH

export GOPATH=$(go env GOPATH)
export PATH=$PATH:$GOPATH/bin

# Locale
export LC_ALL=en_US.UTF-8  
export LANG=en_US.UTF-8

# Misc settings
export EDITOR=nvim

# Add extra gemrc with Redbooth's settings
[[ -f $HOME/.gemrc_local ]] && export GEMRC=$HOME/.gemrc_local

# Add env vars to make 3llo work. Check
# https://github.com/qcam/3llo#installation for details
[[ -f $HOME/.3llo_vars ]] && source $HOME/.3llo_vars

# Load The Fuck https://github.com/nvbn/thefuck
command -v thefuck 2>/dev/null && eval "$(thefuck --alias)"

export TERM=xterm-256color
